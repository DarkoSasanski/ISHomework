@model MovieTickets.Domain.Domain.MovieTicket

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>MovieTicket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="MovieId" class="control-label">Movie</label>
                <select name="MovieId" id="MovieId" asp-items="@(new SelectList((IEnumerable<MovieTickets.Domain.Domain.Movie>)ViewBag.Movies, "Id", "MovieName"))" class="form-control">
                    <option value="" disabled>-- Select Movie --</option>
                </select>
                <span asp-validation-for="Movie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPrice" class="control-label"></label>
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDateTime" class="control-label"></label>
                <input asp-for="MovieDateTime" class="form-control" />
                <span asp-validation-for="MovieDateTime" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>