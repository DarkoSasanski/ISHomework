@model MovieTickets.Domain.DTO.AddTicketToCartDto
@{
    ViewData["Title"] = "addTicketToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add to cart</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="addTicketToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieTicketId" />
            <div class="form-group">
                <label asp-for="MovieTicket.Movie.MovieName" class="control-label"></label>
                <input asp-for="MovieTicket.Movie.MovieName" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MovieTicket.MovieDateTime" class="control-label">Projection at</label>
                <input asp-for="MovieTicket.MovieDateTime" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Products" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


