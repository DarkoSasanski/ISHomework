@using MovieTickets.Domain.DTO
@model AddToRoleDto

@{
    ViewData["Title"] = "Set Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Set Role</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label">Role</label>
                <select asp-for="SelectedRole" class="form-control">
                    @foreach(var role in Model.Roles)
                    {
                        if(Model.SelectedRole!=null && role == Model.SelectedRole)
                        {
                            <option value="@role" selected>@role</option>
                        }
                        else
                        {
                            <option value="@role">@role</option>
                        }
                    }
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <input asp-for="Email" type="hidden"/>
            <div class="form-group">
                <input type="submit" value="Set" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}